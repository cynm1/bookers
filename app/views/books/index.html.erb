<h1>Books</h1>

<table class=teble>
  <thead>
    <th class="header1">Title</th>
    <th class="header2">Body</th>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: Book.new, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>